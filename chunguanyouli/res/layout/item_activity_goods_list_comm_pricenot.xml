<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="144dp"
    android:layout_margin="4dp"
    android:background="@drawable/item_news_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="4dp" >

    <ImageView
        android:id="@+id/comm_goods_img"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_margin="4dip"
        android:scaleType="fitXY"
        android:src="@drawable/index_goods_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dip"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dip" >

        <TextView
            android:id="@+id/comm_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comm_goods_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品说明"
            android:textColor="#919091"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/comm_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingRight="5dip"
                android:text="原价：￥0.00"
                android:textColor="#919091"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/comm_goods_num_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="20\t人买过"
                android:textColor="@color/orange"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/comm_goods_pricenot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dip"
            android:text="折扣价：￥0.00"
            android:textColor="@color/cg_base"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>