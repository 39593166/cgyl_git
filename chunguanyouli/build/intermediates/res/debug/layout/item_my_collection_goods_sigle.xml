<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="10" >
      <CheckBox
            android:id="@+id/collect_isSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <FrameLayout
        android:layout_width="0dip"
        android:layout_height="80dip"
        android:layout_margin="10dip"
        android:layout_weight="3" >

        <ImageView
            android:id="@+id/collect_goods_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/index_goods_list" />

       
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dip" >

        <TextView
            android:id="@+id/collect_goods_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/collect_goods_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="商品说明"
            android:textColor="#919091"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginTop="3dip"
            android:layout_weight="1"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/collect_goods_num_sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="20\t人买过"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/collect_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:text="￥0.00"
                android:textColor="#919091"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/car_pay"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/cg_base"
        android:textColor="@color/white"
        android:layout_marginRight="4dp"
        android:text="购买" />

</LinearLayout><!-- From: file:/D:/android_project/AS/cgyl_ali/chunguanyouli/res/layout/item_my_collection_goods_sigle.xml -->