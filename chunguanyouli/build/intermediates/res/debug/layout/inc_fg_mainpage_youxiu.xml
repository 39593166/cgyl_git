            android:layout_height="wrap_content"
            android:text="本周村官之星"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <com.views.CircleImageView
                android:id="@+id/mainpage_cg_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index" />

            <TextView
                android:id="@+id/mainpage_cg_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="罗璇"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mainpage_cgpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="99发布"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mainpage_cgsale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="99出售"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mainpage_cgshopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="99代购"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="任职村镇" />

        <TextView
            android:id="@+id/mainpage_cgworkspace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="重庆市南川乌龙镇" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="推荐理由" />

        <TextView
            android:id="@+id/mainpage_cgrecommendwhy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="服务于群众，能力突出" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="乡村之巅"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mainpage_contry_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/index" />

            <TextView
                android:id="@+id/mainpage_contryname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="小小村"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mainpage_contryinstruction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:text="乡村简介：行行行行行行行行行行行行" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mainpage_contryfimilysum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="99\n村户"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mainpage_contrypersonsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="99\n村民"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mainpage_contryleadersum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="99\n村官"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/mainpage_contryproductsum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="99\n农产"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
             android:id="@+id/mainpage_contrytitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>

