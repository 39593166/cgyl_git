<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:weightSum="10" >

    <ImageView
        android:id="@+id/commendgoodsgoods_item_img"
        android:layout_width="0dip"
        android:layout_height="120dip"
        android:layout_marginLeft="10dip"
        android:layout_weight="2"
        android:padding="6dip"
        android:src="@drawable/index_goods_list" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dip"
        android:paddingLeft="15dip"
        android:paddingTop="10dip" >

        <TextView
            android:id="@+id/commendgoodsgoods_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dip"
            android:text="名字"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dip" >

            <TextView
                android:id="@+id/commendgoodsgoods_item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView2"
                android:text="2"
                android:layout_marginLeft="8dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/commendgoodsgoods_item_comm"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@color/cg_base"
                android:text="评价"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="购买数量:"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dip" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="价格:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/commendgoodsgoods_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView4"
                android:text="4.00"
                android:textColor="@color/orange"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/commendgoodsgoods_item_price"
                android:text="小计:"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/commendgoodsgoods_item_price_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/textView6"
                android:text="23.00"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/android_project/AS/cgyl_ali/chunguanyouli/res/layout/commendgoods_checking_goods_item.xml -->