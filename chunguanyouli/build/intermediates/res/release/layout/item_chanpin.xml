<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/item_chanpinimg"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_margin="4dp"
        android:src="@drawable/index" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="点评指数：" />

        <TextView
            android:id="@+id/item_chanpinscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="4dp" >

        <TextView
            android:id="@+id/item_chanpin_msgshang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="99条悬赏消息" />

        <TextView
            android:id="@+id/item_chanpin_msgsale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99条出售消息" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_chanpin_recommendWhy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"   android:layout_marginLeft="8dp"
        android:text="推荐理由：百年历史" />

