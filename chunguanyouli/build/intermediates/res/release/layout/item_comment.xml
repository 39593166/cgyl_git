<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp" >

        <com.views.CircleImageView
            android:id="@+id/item_commend_head"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/index" />

        <TextView
            android:id="@+id/item_commend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="张芳芳" />

        <TextView
            android:id="@+id/item_commend_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:text="2015-9-6" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_commend_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="评价" />

    <LinearLayout
        android:id="@+id/item_commend_imagelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp" >
    </LinearLayout>

