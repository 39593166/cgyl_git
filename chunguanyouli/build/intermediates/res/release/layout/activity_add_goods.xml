<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_title" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/gainsboro"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >

            <Button
                android:id="@+id/addGoodsImage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:drawableRight="@drawable/arrow_right_gray"
                android:gravity="center_vertical|left"
                android:maxLength="7"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="添加商品图片"
                android:textSize="16sp" />

            <com.views.NoScrollGridView
                android:id="@+id/addGoodsImageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numColumns="3" >
            </com.views.NoScrollGridView>

            <Button
                android:id="@+id/addPersonImage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:drawableRight="@drawable/arrow_right_gray"
                android:gravity="center_vertical|left"
                android:maxLength="7"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="添加农户图片"
                android:textSize="16sp" />

            <com.views.NoScrollGridView
                android:id="@+id/addPersonImageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numColumns="3" >
            </com.views.NoScrollGridView>

            <Button
                android:id="@+id/addAreaImage"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:drawableRight="@drawable/arrow_right_gray"
                android:gravity="center_vertical|left"
                android:maxLength="7"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="添加种、养殖环境图片"
                android:textSize="16sp" />

            <com.views.NoScrollGridView
                android:id="@+id/addAreaImageList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:numColumns="3" >
            </com.views.NoScrollGridView>

            <EditText
                android:id="@+id/addGoodsTitle"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:ems="10"
                android:hint="请输入商品标题"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/addGoodsType"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:drawableRight="@drawable/arrow_right_gray"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="类目"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="8dp"
                    android:text="养殖农户："
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/addGoodsFarmer"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入农户名"
                    android:paddingRight="8dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="8dp"
                    android:text="价格(元)"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/addGoodsPrice"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="￥"
                    android:inputType="numberDecimal"
                    android:maxLength="7"
                    android:paddingRight="8dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="8dp"
                    android:text="单位："
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/addGoodsDW"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="请输入该价格所销售单位"
                    android:singleLine="true"
                    android:paddingRight="8dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:orientation="horizontal"
                android:weightSum="2" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:maxLength="7"
                    android:paddingLeft="8dp"
                    android:text="库存"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/addGoodsStore"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="库存"
                    android:inputType="number"
                    android:paddingRight="8dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="8dp"
                    android:text="运费"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/addGoodsAppend"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="￥"
                    android:inputType="numberDecimal"
                    android:paddingRight="8dp"
                    android:textSize="16sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/addGoodsDes"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:gravity="left|top"
                android:hint="请输入产品描述"
                android:padding="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/addGoodsAppendSpace"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:drawableRight="@drawable/arrow_right_gray"
                android:gravity="center_vertical|left"
                android:maxLength="7"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="发货地"
                android:textSize="16sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bgw_c3_l0"
                android:orientation="horizontal"
                android:weightSum="2" >

                <Button
                    android:id="@+id/addGoodsAddStore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="放入仓库"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/addGoodsPostNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/orange"
                    android:text="立即发布"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/D:/android_project/AS/ChungGuan/chunguanyouli/res/layout/activity_add_goods.xml -->