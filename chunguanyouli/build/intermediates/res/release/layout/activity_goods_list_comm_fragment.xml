<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:gravity="right"
    android:orientation="vertical" >



    <GridView
        android:id="@+id/good_gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:padding="8dp"
        android:verticalSpacing="8dp"
        android:visibility="gone" >
    </GridView>

    <Button
        android:id="@+id/goodsListMore"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:drawableRight="@drawable/arrow_right_gray"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="查看更多"
        android:textSize="14sp"
        android:visibility="gone" />

    <GridView
        android:id="@+id/goodsGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:visibility="gone" >
    </GridView>

    <!-- </LinearLayout> -->

    <com.handmark.pulltorefresh.library.PullToRefreshGridView
        android:id="@+id/goodsList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="8dp"
        android:divider="@null"
        android:fastScrollEnabled="true"
        android:horizontalSpacing="8dp"
        android:numColumns="2"
        android:overScrollMode="never"
        android:background="@color/cg_bg"
        android:scrollbars="none"
        android:verticalSpacing="8dp"
        ptr:ptrShowIndicator="false" >
    </com.handmark.pulltorefresh.library.PullToRefreshGridView>

</LinearLayout><!-- From: file:/D:/android_project/AS/ChungGuan/chunguanyouli/res/layout/activity_goods_list_comm_fragment.xml -->