<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_title" />

    <RadioGroup
        android:id="@+id/commendRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/cg_base"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/commendChooseType1"
            style="@style/noPicRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="全部"
            android:textSize="15dip" />

        <RadioButton
            android:id="@+id/commendChooseType2"
            style="@style/noPicRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="好评" />

        <RadioButton
            android:id="@+id/commendChooseType3"
            style="@style/noPicRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="中评" />

        <RadioButton
            android:id="@+id/commendChooseType4"
            style="@style/noPicRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="差评" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/commendLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/android_project/AS/ChungGuan/chunguanyouli/res/layout/activity_goods_commend.xml -->