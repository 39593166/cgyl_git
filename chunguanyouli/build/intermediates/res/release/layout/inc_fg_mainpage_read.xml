<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:text="每日必读" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp" >

        <TextView
            android:id="@+id/main_read_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在村头的日子"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/main_read_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="4月27日"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/main_read_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/index" />

        <Button
            android:id="@+id/main_read_go"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:drawableRight="@drawable/index"
            android:gravity="center_vertical|left"
            android:text="阅读全文" />
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/android_project/AS/ChungGuan/chunguanyouli/res/layout/inc_fg_mainpage_read.xml -->